	default y if !PSA_DEFAULT_OFF && PSA_WANT_ALG_ECDSA && \
		     !PSA_CRYPTO_DRIVER_ALG_ECDSA_CC3XX

config PSA_CRYPTO_DRIVER_ALG_GCM_OBERON
